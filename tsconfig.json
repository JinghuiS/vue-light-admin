{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "components.d.ts",
        "router.d.ts",
        "public/mock.json"
    ],
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@core/*": ["./src/core/*"],
            "@shared/*": ["./src/shared/*"]
        }
    },

    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
